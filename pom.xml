        </license>
    </licenses>

    <developers>
        <developer>
            <name>Syam Pillai</name>
            <email>syam@engravgroup.com</email>
            <organization>Syam Pillai</organization>
            <organizationUrl>https://github.com/syampillai</organizationUrl>
        </developer>
    </developers>

